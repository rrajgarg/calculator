<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    tools:context="com.example.android.myapplication.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7">
        <TextView
            android:text="Write your equation here"
            android:textDirection="firstStrongRtl"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/text" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">
            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_above="@+id/seven"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#212121"
                android:text="C"
                android:textColor="#FBC02D"
                android:textSize="25dp" />
            <Button
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_alignBottom="@+id/divide"
                android:layout_below="@+id/text"
                android:layout_toEndOf="@+id/clear"
                android:layout_toRightOf="@+id/clear"
                android:background="#212121"
                android:text="DEL"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_above="@+id/nine"
                android:layout_alignEnd="@+id/equal"
                android:layout_alignRight="@+id/equal"
                android:background="#212121"
                android:text="*"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
            <Button
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_alignTop="@+id/multiply"
                android:layout_toEndOf="@+id/eight"
                android:layout_toRightOf="@+id/eight"
                android:background="#212121"
                android:text="/"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">
            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_above="@+id/four"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#212121"
                android:text="7"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_above="@+id/five"
                android:layout_toEndOf="@+id/seven"
                android:layout_toRightOf="@+id/seven"
                android:background="#212121"
                android:text="8"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_above="@+id/six"
                android:layout_toEndOf="@+id/eight"
                android:layout_toRightOf="@+id/eight"
                android:background="#212121"
                android:text="9"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
            <Button
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_above="@+id/plus"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#212121"
                android:text="-"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_above="@+id/one"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#212121"
                android:text="4"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_above="@+id/two"
                android:layout_toEndOf="@+id/four"
                android:layout_toRightOf="@+id/four"
                android:background="#212121"
                android:text="5"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_above="@+id/equal"
                android:layout_toEndOf="@+id/two"
                android:layout_toRightOf="@+id/two"
                android:background="#212121"
                android:text="6"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
            <Button
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_above="@+id/equal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#212121"
                android:text="+"
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <Button
                        android:id="@+id/one"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_above="@+id/one"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#212121"
                        android:text="1"
                        android:textColor="#FAFAFA"
                        android:textSize="25dp" />
                    <Button
                        android:id="@+id/two"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_above="@+id/two"
                        android:layout_toEndOf="@+id/four"
                        android:layout_toRightOf="@+id/four"
                        android:background="#212121"
                        android:text="2"
                        android:textColor="#FAFAFA"
                        android:textSize="25dp" />
                    <Button
                        android:id="@+id/three"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_above="@+id/equal"
                        android:layout_toEndOf="@+id/two"
                        android:layout_toRightOf="@+id/two"
                        android:background="#212121"
                        android:text="3"
                        android:textColor="#FAFAFA"
                        android:textSize="25dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <Button
                        android:id="@+id/modulo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_above="@+id/one"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#212121"
                        android:text="%"
                        android:textColor="#FAFAFA"
                        android:textSize="25dp" />
                    <Button
                        android:id="@+id/zero"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_above="@+id/two"
                        android:layout_toEndOf="@+id/four"
                        android:layout_toRightOf="@+id/four"
                        android:background="#212121"
                        android:text="0"
                        android:textColor="#FAFAFA"
                        android:textSize="25dp" />
                    <Button
                        android:id="@+id/point"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_above="@+id/equal"
                        android:layout_toEndOf="@+id/two"
                        android:layout_toRightOf="@+id/two"
                        android:background="#212121"
                        android:text="."
                        android:textColor="#FAFAFA"
                        android:textSize="25dp" />

                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/point"
                android:layout_toRightOf="@+id/point"
                android:background="#FBC02D"
                android:text="="
                android:textColor="#FAFAFA"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
